{
  "name": "bpmn-lite-dsl-editor",
  "version": "0.1.0",
  "description": "A minimal, intuitive domain-specific language for describing business process diagrams",
  "main": "main.js",
  "scripts": {
    "build": "node build.js",
    "start": "electron .",
    "start:web": "http-server dist -o",
    "test": "echo 'Open test-browser.html in a browser to run tests'",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -mwl",
    "package:portable": "electron-builder --dir && node scripts/create-portable-package.js"
  },
  "keywords": [
    "bpmn",
    "dsl",
    "mermaid",
    "diagram",
    "process"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "http-server": "^14.1.1"
  },
  "build": {
    "appId": "com.bpmnlite.editor",
    "productName": "BPMN-Lite Editor",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "!node_modules/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "artifactName": "${productName}-${version}-Portable.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.svg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "resources/icon.svg"
    }
  }
}
